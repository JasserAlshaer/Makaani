@model IEnumerable<Makaani.Models.UsersPayingOffers>;
@{
    Layout = "_LayoutSaler";
}
<div class="card my-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Out Going Offers</h6>
        </div>
    </div>
    
    <div class="card-body px-0 pb-2">
        <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
                <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ads Title</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Offer Date</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Provided Price</th>
                        <th class="text-secondary opacity-7"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                   {
                       
                  
                    <tr>

                        <td>
                          <p class="text-xs text-secondary mb-0">@item.Ads.AdsId</p>
                        </td>
                        <td>
                        </td>
                        <td class="align-middle text-center text-sm">
                            <span class="badge badge-sm bg-gradient-success">@item.Ads.Title</span>
                        </td>
                         <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold">@item.PayingOffer.OfferDate</span>
                        </td>
                        <td class="align-middle text-center text-sm">
                            <span class="badge badge-sm bg-gradient-success">@item.PayingOffer.ProvidedPrice</span>
                        </td>
                       
                        <td class="align-middle">
                            <a asp-action="UpdatePayOffer" asp-route-id="@item.PayingOffer.PayingOfferId"  class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit">
                                Edit
                            </a>
                            <a asp-action="DeletePayOffer" asp-route-id="@item.PayingOffer.PayingOfferId" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete">
                                Delete
                            </a>
                        </td>
                    </tr>
                     }
                </tbody>
            </table>
        </div>
    </div>
 </div>
