@model IEnumerable<Makaani.Models.EstateMain>;
@{
    Layout = "_LayoutSaler";
}
 <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Products table</h6>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Owner</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ads Title</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Area</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Price</th>
                     
                    </tr>
                  </thead>
                  <tbody>
                       @foreach (var item in Model)
                     {
                          <tr>
                      <td>
                        <div class="d-flex px-2 py-1">
                          <div>
                            <img src="~/MakaniAssets/uploads/@item.User.ProfileImage" class="avatar avatar-sm me-3 border-radius-lg" alt="user1">
                          </div>
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@item.User.FullName</h6>
                           
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">@item.Ads.Title</p>
                        
                      </td>
                      <td class="align-middle text-center text-sm">
                        <span class="badge badge-sm bg-gradient-success">@item.Product.Area</span>
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold">@item.Ads.Descrption</span>
                      </td>

                       <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold">@item.Ads.Price</span>
                      </td>
                      
                    </tr>
                     }
                 
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>