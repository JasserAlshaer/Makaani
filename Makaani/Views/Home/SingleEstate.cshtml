@model IEnumerable<Makaani.Models.SingleAds>;
@{
	var view=ViewBag.adsViews;
}
<!DOCTYPE html>
<html lang="en">
  <head>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>eCommerce Product Detail</title>
@*    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">*@
	<link href="~/css/site.css" rel="stylesheet"  />
	<script src="https://aframe.io/releases/1.0.4/aframe.min.js"></script>  
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pannellum/2.5.6/pannellum.css"
        integrity="sha512-UoT/Ca6+2kRekuB1IDZgwtDt0ZUfsweWmyNhMqhG4hpnf7sFnhrLrO0zHJr2vFp7eZEvJ3FN58dhVx+YMJMt2A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />


     <style>
	 * {
    padding: 0;
    margin: 0;
}
#panorama-360-view {
    width: 100vw;
    height: 100vh;
}</style>

  </head>

  <body>
	
	<div class="container">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
						  <div class="tab-pane active" id="pic-1">
							  
							@*<a-scene style="width:300px; height:600px;">
                              <a-sky src="https://images.unsplash.com/photo-1596263576925-d90d63691097?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1622&q=80"></a-sky> 
                            </a-scene>*@
							  <div id="panorama-360-view">
								   <img src="https://images.unsplash.com/photo-1596263576925-d90d63691097?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1622&q=80" />
							  </div>
						  
						  </div>
						  
						</div>
						<ul class="preview-thumbnail nav nav-tabs">
						  <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
						  <li><a data-target="#pic-2" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
						  <li><a data-target="#pic-3" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
						  <li><a data-target="#pic-4" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
						  <li><a data-target="#pic-5" data-toggle="tab"><img src="http://placekitten.com/200/126" /></a></li>
						</ul>
						
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">@Model.ElementAt(0).Ads.Title</h3>
						<div class="rating">
							
							<span class="review-no">@view Views</span>
						</div>
						<p class="product-description">
							@Model.ElementAt(0).Ads.Descrption
						</p>
						<h4 class="price">current price: <span>$ @Model.ElementAt(0).Ads.Price</span></h4>

						<h5 class="sizes">Location :
							<br />
							<span class="size" data-toggle="tooltip" title="small">@Model.ElementAt(0).Location.LoactionLabel</span>
							<span class="size" data-toggle="tooltip" title="medium">@Model.ElementAt(0).Location.Notes</span>
@*							<span class="size" data-toggle="tooltip" title="large">@Model.ElementAt(0).Location.</span>*@
							
						</h5>
						<hr />
						<br />
	                     <div class="row">
							  <div class="col-6">
								  <h5 class="sizes">Fetures & Finishes :</h5>
							  </div>
							   <div class="col-6">
								     <h5 class="sizes">Rooms</h5>
							   </div>
					      </div>
						
						<div class="action">
							<button class="add-to-cart btn btn-default" type="button" >
								<a asp-controller="Saller" asp-action="SendPayOffer"  asp-route-adsId="@Model.ElementAt(0).Ads.AdsId">
									Send Pay Offer
								</a>
								</button>
							<button class="like btn btn-default" type="button">
								<a asp-controller="Saller" asp-action="InsertToLoveList"  asp-route-id="@Model.ElementAt(0).Ads.ProductId">
									<span class="fa fa-heart"></span>
								</a>
							
								</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>

  <script>
	pannellum.viewer('panorama-360-view', {
    "type": "equirectangular",
    "panorama": "https://i.ibb.co/6PGHKkT/360-image.jpg",
    "autoLoad": true
})
	</script>
