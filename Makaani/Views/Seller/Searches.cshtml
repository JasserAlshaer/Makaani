@model IEnumerable<Makaani.Models.UserSearch>
@{
    Layout = "_LayoutSeller";
}
<div class="card my-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-success shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Search History table</h6>
        </div>
    </div>
   @* <div class="row">
    <button type="button" class="btn-primary col-5" style="color:white;margin-left:80px">
       <a asp-action="ClearLastViewAds" style="color:white;text-decoration:none" >Clear Views History</a>
     </button>
     </div>*@
    <div class="card-body px-0 pb-2">
        <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
                <thead>
                    <tr>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Search Title</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                        <th class="text-secondary opacity-7"></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model)
                   {
                       
                  
                    <tr>

                        <td>
                          <p  class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@item.UserSearchId</p>
                        </td>
                      
                        <td >
                              <p  class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@item.SearchTitle</p>
                          
                        </td>
                         <td class="">
                            <a asp-controller="Seller"
                            asp-action="SearchForEstateFromDashboard" 
                            asp-route-keyWord="@item.SearchTitle"
                            asp-route-categotyId="@item.CategoryId"
                            asp-route-placeId="@item.PlaceId"
                            class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Search">
                                Search Again 
                            </a>
                        </td>
                       
                       
                        <td class="align-middle">
                           
                           <a asp-controller="Seller"
                            asp-action="DeleteSearch" 
                           
                            asp-route-deleteAll="false"
                            asp-route-placeId="@item.UserSearchId"
                            class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete">
                                Delete 
                            </a>
                        </td>
                    </tr>
                     }
                </tbody>
            </table>
        </div>
    </div>
         <div class="row">
         
                    <div class="text-center">
                      <button type="submit" class="btn btn-lg bg-gradient-success btn-lg w-100 mt-4 mb-0">
                         <a asp-action="DeleteSearch" asp-route-deleteAll="true" style="color:white;"> Clear Search History</a>
                      </button>
                    </div>
     </div>
     </div>