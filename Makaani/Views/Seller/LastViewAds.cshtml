@model IEnumerable<Makaani.Models.LastAds>
@{
    Layout = "_LayoutSeller";
}
<div class="card my-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-success shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Last Views Ads table</h6>
        </div>
    </div>
   @* <div class="row">
    <button type="button" class="btn-primary col-5" style="color:white;margin-left:80px">
       <a asp-action="ClearLastViewAds" style="color:white;text-decoration:none" >Clear Views History</a>
     </button>
