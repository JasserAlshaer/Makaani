    <div class="card-body px-0 pb-2">
        <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
                <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ads Title</th>
                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Last Viewd At</th>
                        <th class="text-secondary opacity-7"></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model)
                   {
                       
                  
                    <tr>

                        <td>
                          <p class="text-xs text-secondary mb-0">@item.Ads.AdsId</p>
                        </td>
                        <td>
                        </td>
                        <td class="align-middle text-center text-sm">
                            <span class="badge badge-sm bg-gradient-success">@item.Ads.Title</span>
                        </td>
                         <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold">@item.LastViewAds.LastViewAt</span>
                        </td>
                       
                       
                        <td class="align-middle">
                           
                            <a asp-action="RemoveLastViewAdsRecord" asp-route-id="@item.LastViewAds.LastViewAdsId" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete">
                                Delete
                            </a>
                        </td>
                    </tr>
                     }
                </tbody>
            </table>
        </div>
    </div>
         <div class="row">
         
                    <div class="text-center">
                      <button type="submit" class="btn btn-lg bg-gradient-success btn-lg w-100 mt-4 mb-0">
                        <a asp-action="ClearLastViewAds" style="color:white;text-decoration:none" >Clear Views History</a>
                      </button>
                    </div>
     </div>
     </div>