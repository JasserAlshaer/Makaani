@{
     Layout = "_LayoutSeller";
     var list1=ViewBag.cat as List<Makaani.Models.Category>;
      var list2=ViewBag.dep as List<Makaani.Models.Department>;
}
<div class="row">
  <div class="col-xl-12 col-lg-12 col-md-12 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-12">
              <div class="card card-plain">
                <div class="card-header">
                  <h4 class="font-weight-bolder">Insert Ads Information</h4>
                  <p class="mb-0">Enter Your Estamited Price & Note </p>
                </div>
                <div class="card-body">
                  <form  asp-action="InsertAds" method="post">
                    
                    <div class="input-group input-group-outline mb-3">
                    
                      <input type="text" name="title" placeholder="title" required class="form-control">
                    </div>
                    <div class="input-group input-group-outline mb-3">
                      
                      <input type="text" pattern="[0-9]+" required name="price" placeholder="Price" class="form-control">
                    </div>
                    <div class="input-group input-group-outline mb-3">
                    
                      <input type="text" name="description" placeholder="Description" required class="form-control">
                    </div>

                      <select class="form-control" name="categotyId">
                          <option value="">Select Category</option>
                          @foreach (var item in list1)
                         {
                                <option value="@item.CategoryId">@item.Name</option>
                         }
                       
                     </select>
                     <br />
                     <br>
                     <select class="form-control" name="departmentId">
                          <option value="">Select Department</option>
                          @foreach (var item in list2)
                         {
                                <option value="@item.DepartmentId">@item.Name</option>
                         }
                       
                     </select>

                    <div class="text-center">
                      <button type="submit" class="btn btn-lg bg-gradient-success btn-lg w-100 mt-4 mb-0">Save Ads</button>
                    </div>
                  </form>
                </div>
               
              </div>
            </div>
            </div>