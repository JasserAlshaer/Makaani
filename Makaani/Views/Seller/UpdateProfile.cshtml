@model Makaani.Models.ProfileU;

@{
     Layout = "_LayoutSeller";
}
<div class="row">
  <div class="col-xl-12 col-lg-12 col-md-12 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-12">
              <div class="card card-plain">
                <div class="card-header">
                  <h4 class="font-weight-bolder">Update Profile</h4>
                  <p class="mb-0">Update Your Own Data </p>
                </div>
                <div class="card-body">
                  <form  asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                    <div class="input-group input-group-outline mb-3">
                        @if (@Model.User.ProfileImage!=null) {
                            <div>
                            <img src="~/uploads/@Model.User.ProfileImage" class="border-radius-lg shadow-sm" style="width:50%;"/>
                            </div>

                        }
                        <input type="file" name="image" class="form-control">
                    </div>
                    <div class="input-group input-group-outline mb-3">
                      <input type="text" name="name" class="form-control"value="@Model.User.FullName">
                    </div>
                     <div class="input-group input-group-outline mb-3">
                      <input type="text" name="address" class="form-control" value="@Model.User.Address" placeholder="Adress">
                    </div>
                     <div class="input-group input-group-outline mb-3">
                      <input type="password" name="password" class="form-control" value="@Model.Login.Password">
                    </div>
                     <div class="input-group input-group-outline mb-3">
                      <input type="number" name="phone" class="form-control" value="@Model.Login.Phone">
                    </div>
                     <div class="input-group input-group-outline mb-3">
                      <input type="email" name="email" class="form-control"value="@Model.Login.Email">
                    </div>
                    <div class="text-center">
                      <button type="submit" class="btn btn-lg bg-gradient-success btn-lg w-100 mt-4 mb-0">Update Information</button>
                    </div>
                  </form>
                </div>
               
              </div>
            </div>
            </div>