@{
     Layout = "_LayoutSeller";
}
<div class="row">
  <div class="col-xl-12 col-lg-12 col-md-12 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-12">
              <div class="card card-plain">
                <div class="card-header">
                  <h4 class="font-weight-bolder">Insert Location</h4>
                  <p class="mb-0">Enter The Location Description For Your Products </p>
                </div>
                <div class="card-body">
                  <form  asp-action="InsertLoactions" method="post">
                      <input type="number" name="productId" value="" hidden readonly />
                    <div class="input-group input-group-outline mb-3">
                     
                      <input type="text" name="label" placeholder="Location Label" class="form-control" required>  
                    </div>
                    <div class="input-group input-group-outline mb-3">
                  
                      <input type="text" name="mapsLink" placeholder="Maps Link (optional)" class="form-control">
                    </div>
                    <div class="input-group input-group-outline mb-3">
                     
                      <input type="text" name="note" placeholder="Note" class="form-control" required>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="btn btn-lg bg-gradient-success btn-lg w-100 mt-4 mb-0">Save Loaction</button>
                    </div>
                  </form>
                </div>
               
              </div>
            </div>
            </div>