@model IEnumerable<Makaani.Models.Followers>;
@{
    Layout = "_LayoutSeller";
}
<div class="card my-4">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="bg-gradient-success shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Following</h6>
        </div>
    </div>
    <div class="card-body px-0 pb-2">
        <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
                <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Image</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">User Name</th>
                        <th class="text-secondary opacity-7"></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model)
                   {
                       
                  
                    <tr>

                        <td>
                          <p class="text-xs text-secondary mb-0">@item.Follower.FollowerId</p>
                        </td>
                        <td>
                       
                         
                            <img src="~/uploads/@item.User.ProfileImage" class="avatar avatar-sm me-3" alt="xd">
                         
                          </td>
                        <td class="align-middle text-sm">
                            <p class="text-secondary">@item.User.FullName</p>
                        </td>

                       
                       
                        <td class="align-middle">
                           
                            <a asp-action="UnFollowUser" asp-route-follwerId="@item.Follower.FollowerId" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Delete">
                                UnFollow
                            </a>
                        </td>
                    </tr>
                     }
                </tbody>
            </table>
        </div>
    </div>
     </div>